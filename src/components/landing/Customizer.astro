---
let colors = [
	{
		name: "Red",
		description:
			"The color of fire and blood, so it is associated with energy, war, danger, strength, power, determination as well as passion, desire, and love.",
		hex: "#FF0000",
	},
	{
		name: "Green",
		description: "The color of nature. It symbolizes growth, harmony, freshness, and fertility. Green has strong emotional correspondence with safety.",
		hex: "#00FF00",
	},
	{
		name: "Blue",
		description:
			"The color of the sky and the sea. It is often associated with depth and stability. It symbolizes trust, loyalty, wisdom, confidence, intelligence, faith, truth, and heaven.",
		hex: "#0000FF",
	},
	{
		name: "Yellow",
		description:
			"The color of sunshine. It is associated with joy, happiness, intellect, and energy. Yellow produces a warming effect, arouses cheerfulness, stimulates mental activity, and generates muscle energy.",
		hex: "#FFFF00",
	},
	{
		name: "Cyan",
		description:
			"The color of the sky and the sea. It is often associated with depth and stability. It symbolizes trust, loyalty, wisdom, confidence, intelligence, faith, truth, and heaven.",
		hex: "#00FFFF",
	},
	{
		name: "Magenta",
		description:
			"The color of the sky and the sea. It is often associated with depth and stability. It symbolizes trust, loyalty, wisdom, confidence, intelligence, faith, truth, and heaven.",
		hex: "#FF00FF",
	},
];
---

<section class="relative pt-24 pb-36 overflow-hidden">
	<div class="container mx-auto px-4">
		<h2 class="mb-5 max-w-2xl mx-auto font-semibold text-center text-6xl sm:text-7xl text-gray-900">All the colors</h2>
		<p class="mb-20 text-base max-w-md mx-auto text-center text-gray-600">
			Endless possibilities. Mix and match components and colors to create a unique look for you.
		</p>
		<div class="flex flex-wrap -m-6">
			{
				colors.map((color) => (
					<div class="color" style={{ backgroundColor: color.hex }}>
						<h3 class="text-color">{color.name}</h3>
						<!--<p class="text-description">{color.description}</p>-->
					</div>
				))
			}
		</div>
	</div>
</section>

<style>
	.color {
		@apply w-full md:w-1/2 xl:w-1/6 text-center p-6;
	}
	.text-color {
		@apply mb-1 font-bold text-lg text-gray-900;
	}
	.text-description {
		@apply text-sm text-gray-500;
	}
</style>
